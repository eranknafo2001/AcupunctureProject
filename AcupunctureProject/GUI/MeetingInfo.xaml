<Window x:Class="AcupunctureProject.GUI.MeetingInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcupunctureProject.GUI"
        mc:Ignorable="d"
        Title="MeetingInfo" Height="500" Width="1500" FlowDirection="RightToLeft">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="שם" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center"/>
        <!-- patient -->
        <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="patientSearchTextBox" Grid.Column="0"/>
            <Button x:Name="openPatientButton" Content="לפתוח" IsEnabled="False" Grid.Column="2" Click="openPatientButton_Click"/>
        </Grid>
        <Label  Content="תאריך" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
        <DatePicker x:Name="date" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Width="110" IsEnabled="False"/>
        <Label Content="סימפטומים" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBox x:Name="symptomSearch" Grid.Row="4" Grid.Column="2" VerticalAlignment="Top" Height="25" TextChanged="SymptomSearch_TextChanged" IsEnabled="False" LostFocus="symptomSearch_LostFocus" GotFocus="symptomSearch_GotFocus" KeyDown="symptomSearch_KeyDown"/>
        <ListView x:Name="symptomSearchList" MaxHeight="100" SelectionMode="Single" Visibility="Hidden" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" LostFocus="symptomSearchList_LostFocus" GotFocus="symptomSearchList_GotFocus" KeyDown="symptomSearchList_KeyDown" MouseDoubleClick="symptomSearchList_MouseDoubleClick" Grid.RowSpan="3" Panel.ZIndex="20"/>
        <TreeView x:Name="symptomTreeView" Grid.Row="6" Grid.Column="2" Margin="0,0,0,0" IsEnabled="False" MouseDoubleClick="symptomTreeView_MouseDoubleClick"/>
        <!-- levels and delete for tree -->
        <Grid Grid.Row="8" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="level0"  Grid.Column="0">
                <Label Content="0" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="level1" Grid.Column="1">
                <Label  Content="1" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="level2" Grid.Column="2">
                <Label  Content="2"  HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="level3" Grid.Column="3">
                <Label Content="3" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="level4" Grid.Column="4">
                <Label Content="4" HorizontalAlignment="Center"/>
            </Border>
            <Border x:Name="level5" Grid.Column="5">
                <Label Content="5" HorizontalAlignment="Center"/>
            </Border>
            <Button x:Name="symptomTreeDelete" Content="מחק" Grid.Column="6" IsEnabled="False" Width="45" Click="symptomTreeDelete_Click"/>
        </Grid>
        <Label Content="נקודות שטופלו" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Center"/>
        <TextBox x:Name="pointThatUsedSearch" Grid.Column="4" Grid.Row="4" IsEnabled="False" GotFocus="pointThatUsedSearch_GotFocus" LostFocus="pointThatUsedSearch_LostFocus" FlowDirection="LeftToRight" TextChanged="pointThatUsedSearch_TextChanged"/>
        <ListView x:Name="pointThatUsedSearchList" MaxHeight="100" SelectionMode="Single" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="20" Visibility="Hidden" Grid.Column="4" Grid.Row="4" Grid.RowSpan="3" LostFocus="pointThatUsedSearchList_LostFocus" GotFocus="pointThatUsedSearchList_GotFocus" FlowDirection="LeftToRight" KeyDown="pointThatUsedSearchList_KeyDown" MouseDoubleClick="pointThatUsedSearchList_MouseDoubleClick"/>
        <ListBox x:Name="pointThatUsed" Grid.Row="6" Grid.Column="4" IsEnabled="False" KeyDown="pointThatUsed_KeyDown" FlowDirection="LeftToRight"/>
        <Grid Grid.Column="4" Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="pointThatUsedDelete" Content="מחק" Grid.Column="2" IsEnabled="False" Click="pointThatUsedDelete_Click" Width="45"/>
        </Grid>
        <Label Content="הערות" Grid.Row="4" Grid.Column="6" HorizontalAlignment="Center"/>
        <TextBox x:Name="notes" Grid.Row="6" Grid.Column="6" IsEnabled="False"/>
        <Label Content="סיכום" Grid.Row="4" Grid.Column="8" HorizontalAlignment="Center"/>
        <!-- summery block -->
        <Grid Grid.Row="6" Grid.Column="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="summeryTextBox" Grid.Row="0" IsEnabled="False"/>
            <Label Content="פרוט התוצאה" Grid.Row="1" HorizontalAlignment="Center"/>
            <TextBox x:Name="resoltSummeryTextBox" Grid.Row="2" IsEnabled="False"/>
            <StackPanel Orientation="Horizontal" Grid.Row="3">
                <Label Content="תוצאה" Margin="10,0,0,0"/>
                <ComboBox x:Name="resolt" IsEnabled="False"/>
            </StackPanel>
        </Grid>
        <Button x:Name="censel" Content="ביטול" Grid.Row="8" Grid.Column="0" Click="Censel_Click"/>
        <!-- buttons grid -->
        <Grid Grid.Row="8" Grid.Column="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="save" Content="שמור" Grid.Column="1" IsEnabled="False" Click="save_Click" Width="50" Height="29"/>
            <Button x:Name="saveAndExit" Content="שמור וסגור" Grid.Column="3" IsEnabled="False" Click="saveAndExit_Click" Width="80" Height="29"/>
        </Grid>
    </Grid>
</Window>
