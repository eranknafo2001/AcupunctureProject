<Window x:Class="AcupunctureProject.GUI.MeetingListByPatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcupunctureProject.GUI"
        mc:Ignorable="d"
        Title="פגישות לפי מטופל" Height="300" Width="300" FlowDirection="RightToLeft">
    <Grid Margin="10">
        <DataGrid x:Name="meetings" FlowDirection="RightToLeft">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="מטופל" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding DateString}" Header="תאריך" SortDirection="Ascending" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding SmallDescription}" Header="הערות" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
