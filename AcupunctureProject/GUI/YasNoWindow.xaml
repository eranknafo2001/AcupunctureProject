<Window x:Class="AcupunctureProject.GUI.YasNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcupunctureProject.GUI"
        mc:Ignorable="d"
        Title="YasNoWindow" Height="133.486" Width="300" FlowDirection="RightToLeft">
    <Grid Margin="20,10,20,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="myText" TextWrapping="Wrap" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" FontSize="22"/>
        <Button x:Name="no" Content="לא" Grid.Column="0" Grid.Row="2" Width="50" Height="20" Click="no_Click"/>
        <Button x:Name="yas" Content="כן" Grid.Column="2" Grid.Row="2" Width="50" Height="20" Click="yas_Click"/>

    </Grid>
</Window>
