<Window x:Class="AcupunctureProject.GUI.DiagnosticInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcupunctureProject.GUI"
        mc:Ignorable="d"
        Title="DiagnosticInfo" Height="300" Width="300" FlowDirection="RightToLeft">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5">
            <StackPanel Margin="10">                <GroupBox Header="עבודה">                    <TextBox x:Name="Profession" Text="{Binding Path=Diagnostic.Profession ,Mode=TwoWay}"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="תלונה עיקרית">                    <TextBox x:Name="MainComplaint" Text="{Binding Path=Diagnostic.MainComplaint ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="תלונה מישנית">                    <TextBox x:Name="SeconderyComlaint" Text="{Binding Path=Diagnostic.SeconderyComlaint ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="תרופות בשימוש">                    <TextBox x:Name="DrugsUsed" Text="{Binding Path=Diagnostic.DrugsUsed ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="בדיקות שנעשו">                    <TextBox x:Name="TestsMade" Text="{Binding Path=Diagnostic.TestsMade ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם יש כאב ? כן לא מיקום, ממתי כואב">                    <StackPanel>                        <Border Height="2"/>                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="PainYas" Content="כן" DataContext="True" GroupName="Pain" Grid.Column="1"/>                            <RadioButton x:Name="PainNo" Content="לא" DataContext="False" GroupName="Pain" Grid.Column="3"/>                        </Grid>                        <Border Height="3"/>                        <TextBox x:Name="Pain" Text="{Binding Path=Diagnostic.Pain.Info ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם קיימת אבחנה לגבי מקור הכאב ?">                    <StackPanel>                        <Border Height="2"/>                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="PainPreviousEvaluationsYas" Content="כן" DataContext="True" GroupName="PainPreviousEvaluations" Grid.Column="1"/>                            <RadioButton x:Name="PainPreviousEvaluationsNo" Content="לא" DataContext="False" GroupName="PainPreviousEvaluations" Grid.Column="3"/>                        </Grid>                        <Border Height="3"/>                        <TextBox x:Name="PainPreviousEvaluations" Text="{Binding Path=Diagnostic.PainPreviousEvaluations.Info ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם עברת בדיקות כלשהן? פרט:">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="ScansYas" Content="כן" DataContext="True" GroupName="Scans" Grid.Column="1"/>                            <RadioButton x:Name="ScansNo" Content="לא" DataContext="False" GroupName="Scans" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="Scans" Text="{Binding Path=Diagnostic.Scans.Info ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה חרד,מתוח או לחוץ ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="UnderStressYas" Content="כן" DataContext="True" GroupName="UnderStress" Grid.Column="1"/>                            <RadioButton x:Name="UnderStressNo" Content="לא" DataContext="False" GroupName="UnderStress" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="UnderStress" Text="{Binding Path=Diagnostic.UnderStress.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם השרירים שלך מתוחים ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="TenseMusclesYas" Content="כן" DataContext="True" GroupName="TenseMuscles" Grid.Column="1"/>                            <RadioButton x:Name="TenseMusclesNo" Content="לא" DataContext="False" GroupName="TenseMuscles" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="TenseMuscles" Text="{Binding Path=Diagnostic.TenseMuscles.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header='האם אתה סובל מל"ד גבוה או כולסטרול ?'>                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="HighBloodPressureOrColesterolYas" Content="כן" DataContext="True" GroupName="HighBloodPressureOrColesterol" Grid.Column="1"/>                            <RadioButton x:Name="HighBloodPressureOrColesterolNo" Content="לא" DataContext="False" GroupName="HighBloodPressureOrColesterol" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="HighBloodPressureOrColesterol" Text="{Binding Path=Diagnostic.HighBloodPressureOrColesterol.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם השינה שלך טובה ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="GoodSleepYas" Content="כן" DataContext="True" GroupName="GoodSleep" Grid.Column="1"/>                            <RadioButton x:Name="GoodSleepNo" Content="לא" DataContext="False" GroupName="GoodSleep" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="GoodSleep" Text="{Binding Path=Diagnostic.GoodSleep.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם יש קושי להירדם ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="FallenToSleepProblemYas" Content="כן" DataContext="True" GroupName="FallenToSleepProblem" Grid.Column="1"/>                            <RadioButton x:Name="FallenToSleepProblemNo" Content="לא" DataContext="False" GroupName="FallenToSleepProblem" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="FallenToSleepProblem" Text="{Binding Path=Diagnostic.FallenToSleepProblem.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה חש דפיקות לב (פלפיטציות) ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="PalpitationsYas" Content="כן" DataContext="True" GroupName="Palpitations" Grid.Column="1"/>                            <RadioButton x:Name="PalpitationsNo" Content="לא" DataContext="False" GroupName="Palpitations" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="Palpitations" Text="{Binding Path=Diagnostic.Palpitations.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="מהי תדירות היציאות (צואה) ?">                    <TextBox x:Name="DefeationRegularity" Text="{Binding Path=Diagnostic.DefeationRegularity ,Mode=TwoWay}"/>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה חש בעייפות ו/או מלאות אחרי אוכל ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="FatigueOrFeelsFulAfterEatingYas" Content="כן" DataContext="True" GroupName="FatigueOrFeelsFulAfterEating" Grid.Column="1"/>                            <RadioButton x:Name="FatigueOrFeelsFulAfterEatingNo" Content="לא" DataContext="False" GroupName="FatigueOrFeelsFulAfterEating" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="FatigueOrFeelsFulAfterEating" Text="{Binding Path=Diagnostic.FatigueOrFeelsFulAfterEating.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם יש בך רצון למתוק אחרי אוכל ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="DesireForSweetsAfterEatingYas" Content="כן" DataContext="True" GroupName="DesireForSweetsAfterEating" Grid.Column="1"/>                            <RadioButton x:Name="DesireForSweetsAfterEatingNo" Content="לא" DataContext="False" GroupName="DesireForSweetsAfterEating" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="DesireForSweetsAfterEating" Text="{Binding Path=Diagnostic.DesireForSweetsAfterEating.Info ,Mode=TwoWay}"/>                        <!--האם יש לך קשיי ריכוז ?-->                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם יש לך קשיי ריכוז ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="DifficultyConcentatingYas" Content="כן" DataContext="True" GroupName="DifficultyConcentating" Grid.Column="1"/>                            <RadioButton x:Name="DifficultyConcentatingNo" Content="לא" DataContext="False" GroupName="DifficultyConcentating" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="DifficultyConcentating" Text="{Binding Path=Diagnostic.DifficultyConcentating.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה חולה לעיתים קרובות ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="OftenIllYas" Content="כן" DataContext="True" GroupName="OftenIll" Grid.Column="1"/>                            <RadioButton x:Name="OftenIllNo" Content="לא" DataContext="False" GroupName="OftenIll" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="OftenIll" Text="{Binding Path=Diagnostic.OftenIll.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה סובל מליחה ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="SufferingFromMucusYas" Content="כן" DataContext="True" GroupName="SufferingFromMucus" Grid.Column="1"/>                            <RadioButton x:Name="SufferingFromMucusNo" Content="לא" DataContext="False" GroupName="SufferingFromMucus" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="SufferingFromMucus" Text="{Binding Path=Diagnostic.SufferingFromMucus.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה סובל משיעול או אלרגיות ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="CoughOrAllergySuffersYas" Content="כן" DataContext="True" GroupName="CoughOrAllergySuffers" Grid.Column="1"/>                            <RadioButton x:Name="CoughOrAllergySuffersNo" Content="לא" DataContext="False" GroupName="CoughOrAllergySuffers" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="CoughOrAllergySuffers" Text="{Binding Path=Diagnostic.CoughOrAllergySuffers.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה מעשן ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="SmokingYas" Content="כן" DataContext="True" GroupName="Smoking" Grid.Column="1"/>                            <RadioButton x:Name="SmokingNo" Content="לא" DataContext="False" GroupName="Smoking" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="Smoking" Text="{Binding Path=Diagnostic.Smoking.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם יש לך תכיפות או דחיפות במתן שתן ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="FrequentOrUrgentUrinationYas" Content="כן" DataContext="True" GroupName="FrequentOrUrgentUrination" Grid.Column="1"/>                            <RadioButton x:Name="FrequentOrUrgentUrinationNo" Content="לא" DataContext="False" GroupName="FrequentOrUrgentUrination" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="FrequentOrUrgentUrination" Text="{Binding Path=Diagnostic.FrequentOrUrgentUrination.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה מעדיף קור או חום ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="Hot" Content="חום" DataContext="True" GroupName="PreferColdOrHot" Grid.Column="1"/>                            <RadioButton x:Name="Cold" Content="קור" DataContext="False" GroupName="PreferColdOrHot" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="PreferColdOrHot" Text="{Binding Path=Diagnostic.PreferColdOrHot.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה סובל מקור או מחום ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="SuffersFromColdOrHotYas" Content="כן" DataContext="True" GroupName="SuffersFromColdOrHot" Grid.Column="1"/>                            <RadioButton x:Name="SuffersFromColdOrHotNo" Content="לא" DataContext="False" GroupName="SuffersFromColdOrHot" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="SuffersFromColdOrHot" Text="{Binding Path=Diagnostic.SuffersFromColdOrHot.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה מרוצה מהרגלי התזונה שלך?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="SatisfiedDientsYas" Content="כן" DataContext="True" GroupName="SatisfiedDients" Grid.Column="1"/>                            <RadioButton x:Name="SatisfiedDientsNo" Content="לא" DataContext="False" GroupName="SatisfiedDients" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="SatisfiedDients" Text="{Binding Path=Diagnostic.SatisfiedDients.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="האם אתה רוצה להוריד משקל ?">                    <StackPanel Orientation="Vertical">                        <Grid>                            <Grid.ColumnDefinitions>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                                <ColumnDefinition Width="auto"/>                                <ColumnDefinition Width="1*"/>                            </Grid.ColumnDefinitions>                            <RadioButton x:Name="WantToLostWeightYas" Content="כן" DataContext="True" GroupName="WantToLostWeight" Grid.Column="1"/>                            <RadioButton x:Name="WantToLostWeightNo" Content="לא" DataContext="False" GroupName="WantToLostWeight" Grid.Column="3"/>                        </Grid>                        <TextBox x:Name="WantToLostWeight" Text="{Binding Path=Diagnostic.WantToLostWeight.Info ,Mode=TwoWay}"/>                    </StackPanel>                </GroupBox>                <Border Height="10"/>                <GroupBox Header="נשים">                    <StackPanel>                        <GroupBox Header="האם את משתמשת באמצעי מניעה ?">                            <StackPanel Orientation="Vertical">                                <Grid>                                    <Grid.ColumnDefinitions>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                    </Grid.ColumnDefinitions>                                    <RadioButton x:Name="UsingContraceptionYas" Content="כן" DataContext="True" GroupName="UsingContraception" Grid.Column="1"/>                                    <RadioButton x:Name="UsingContraceptionNo" Content="לא" DataContext="False" GroupName="UsingContraception" Grid.Column="3"/>                                </Grid>                                <TextBox x:Name="UsingContraception" Text="{Binding Path=Diagnostic.UsingContraception.Info ,Mode=TwoWay}"/>                            </StackPanel>                        </GroupBox>                        <Border Height="10"/>                        <GroupBox Header=" האם המחזור שלך סדיר ?">                            <StackPanel Orientation="Vertical">                                <Grid>                                    <Grid.ColumnDefinitions>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                    </Grid.ColumnDefinitions>                                    <RadioButton x:Name="CycleRegularYas" Content="כן" DataContext="True" GroupName="CycleRegular" Grid.Column="1"/>                                    <RadioButton x:Name="CycleRegularNo" Content="לא" DataContext="False" GroupName="CycleRegular" Grid.Column="3"/>                                </Grid>                                <TextBox x:Name="CycleRegular" Text="{Binding Path=Diagnostic.CycleRegular.Info ,Mode=TwoWay}"/>                            </StackPanel>                        </GroupBox>                        <Border Height="10"/>                        <GroupBox Header=" האם את סובלת מכאבי מחזור או עצבנות לפני או בזמן הווסת ?">                            <StackPanel Orientation="Vertical">                                <Grid>                                    <Grid.ColumnDefinitions>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                    </Grid.ColumnDefinitions>                                    <RadioButton x:Name="SufferingFromCrampsOrNervousBeforeMenstruationYas" Content="כן" DataContext="True" GroupName="SufferingFromCrampsOrNervousBeforeMenstruation" Grid.Column="1"/>                                    <RadioButton x:Name="SufferingFromCrampsOrNervousBeforeMenstruationNo" Content="לא" DataContext="False" GroupName="SufferingFromCrampsOrNervousBeforeMenstruation" Grid.Column="3"/>                                </Grid>                                <TextBox x:Name="SufferingFromCrampsOrNervousBeforeMenstruation" Text="{Binding Path=Diagnostic.SufferingFromCrampsOrNervousBeforeMenstruation.Info ,Mode=TwoWay}"/>                            </StackPanel>                        </GroupBox>                        <Border Height="10"/>                        <GroupBox Header=" האם את סובלת מתופעות גיל המעבר ?">                            <StackPanel Orientation="Vertical">                                <Grid>                                    <Grid.ColumnDefinitions>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                        <ColumnDefinition Width="auto"/>                                        <ColumnDefinition Width="1*"/>                                    </Grid.ColumnDefinitions>                                    <RadioButton x:Name="SufferingFromMenpauseYas" Content="כן" DataContext="True" GroupName="SufferingFromMenpause" Grid.Column="1"/>                                    <RadioButton x:Name="SufferingFromMenpauseNo" Content="לא" DataContext="False" GroupName="SufferingFromMenpause" Grid.Column="3"/>                                </Grid>                                <TextBox x:Name="SufferingFromMenpause"/>                            </StackPanel>                        </GroupBox>                        <Border Height="10"/>                        <GroupBox Header=" כמה שעות בשבוע אתה מוכן להשקיע בשביל לשפר את איכות חייך ?">                            <TextBox x:Name="HowManyHoursAWeekAreYouWillingToInvestToImproveTheQualtyOfLife" Text="{Binding Path=Diagnostic.HowManyHoursAWeekAreYouWillingToInvestToImproveTheQualtyOfLife ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                        </GroupBox>                        <Border Height="10"/>                        <GroupBox Header=" איזה שינוי אתה מצפה לראות בעקבות הטיפול">                            <TextBox x:Name="WhatChangesDoYouExpectToSeeFromTreatment" Text="{Binding Path=Diagnostic.WhatChangesDoYouExpectToSeeFromTreatment ,Mode=TwoWay}" Height="100" KeyDown="Enter"/>                        </GroupBox>                    </StackPanel>                </GroupBox>            </StackPanel>
        </ScrollViewer>

        <Button x:Name="Censel" Content="ביטול" Grid.Row="2" Grid.Column="0" Click="Censel_Click"/>
        <Button x:Name="Save" Content="שמור" Grid.Row="2" Grid.Column="2" Click="Save_Click"/>
        <Button x:Name="SaveClose" Content="שמור וסגור" Grid.Row="2" Grid.Column="4" Click="SaveClose_Click"/>
    </Grid>
</Window>
